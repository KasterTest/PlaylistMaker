<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#0000FF" /> <!-- Blue color when focused -->
            <stroke android:width="1dp" android:color="#0000FF" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- White color when not focused -->
            <stroke android:width="1dp" android:color="#AEAFB4" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>
