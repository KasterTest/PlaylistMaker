<resources>
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_text_main_menu</item>
        <item name="colorPrimaryVariant">?attr/colorPrimary</item>
        <item name="colorOnPrimary">@color/background_search_night</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/main_background_color</item>
        <item name="colorSwitchThumbNormal">@color/main_background_color</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="editTextColor">@color/white</item>
        <item name="imageButtonStyle">@color/image_color_night</item>
        <item name="colorOnSurfaceVariant">@color/image_color_night</item>
        <item name="colorOnPrimarySurface">@color/white</item>
        <item name="colorPrimarySurface">@color/white</item>
        <item name="colorOnSurfaceInverse">@color/background_search_night</item>
        <item name="text_track">@color/white</item>
        <item name="text_name_artist_track">@color/white</item>
        <item name="text_update_button">@color/background_search_night</item>
    </style>
    <style name="Theme.PlaylistMakerMainMenu" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_text_main_menu</item>
        <item name="colorPrimaryVariant">?attr/colorPrimary</item>
        <item name="colorOnPrimary">@color/color_text_main_menu</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">#3772E7</item>
        <item name="colorSwitchThumbNormal">#3772E7</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_text_main_menu</item>
        <item name="colorPrimaryVariant">?attr/colorPrimary</item>
        <item name="colorOnPrimary">@color/color_text_main_menu</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/main_background_color</item>
        <item name="colorSwitchThumbNormal">@color/main_background_color</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="editTextColor">@color/edit_text_color_night</item>
        <item name="imageButtonStyle">@color/image_color_night</item>
    </style>
</resources>