<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonMainActivity" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/button_background_main</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_text_main_menu</item>
        <item name="android:fontFamily">@font/yandex_sans_text_medium</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textSize">@dimen/button_main_size</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/button_main_icon_distance_to_text</item>
        <item name="iconTint">@color/black</item>
        <item name="cornerRadius">@dimen/button_main_corner_radius</item>
    </style>
    <style name="ButtonSettingsActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">@dimen/button_settings_size</item>
        <item name="android:fontFamily">@font/yandex_sans_display_regular</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">?attr/colorPrimarySurface</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:textColorSecondary">?attr/colorOnPrimary</item>
    </style>
    <style name="NoTitleBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>
    <style name="SearchActivityButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/top_activity_search</item>
        <item name="android:textSize">@dimen/update_button</item>
        <item name="android:fontFamily">@font/yandex_sans_display_regular</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">?attr/text_update_button</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="ButtonPlayer" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
    </style>
    <style name="track_info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">17dp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">13sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/yandex_sans_display_regular</item>
    </style>
    <style name="track_info_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/track_info_header_color</item>
        <item name="android:textSize">@dimen/track_info_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginTop">17dp</item>
        <item name="android:fontFamily">@font/yandex_sans_display_regular</item>
    </style>
</resources>