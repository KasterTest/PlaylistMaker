<resources>
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_background_color</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/background_search</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_text_main_menu</item>
        <item name="colorSecondaryVariant">@color/color_text_main_menu</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="colorOnSecondary">@color/color_text_main_menu</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <item name="android:navigationBarColor">?attr/colorOnPrimary</item>
        <item name="editTextColor">@color/edit_text_color</item>
        <!-- Customize your theme here. -->
        <item name="colorOnSurfaceVariant">@color/image_color</item>
        <item name="colorOnPrimarySurface">@color/image_color</item>
        <item name="colorPrimarySurface">@color/black</item>
        <item name="colorOnSurfaceInverse">@color/background_search</item>
        <item name="text_track">@color/black</item>
        <item name="text_name_artist_track">@color/name_artist_gray</item>
        <item name="text_update_button">@color/white</item>
        <item name="new_playlist_background_color">@color/white</item>
        <item name="toolbar_text_color">@color/black</item>
        <item name="text_grey_color">@color/text_gray</item>
        <item name="bottom_navigation_color">@color/blue</item>
        <item name="general_icon_color">@color/text_gray</item>
        <item name="new_playlist_input_edit_text_color">@color/black</item>
        <item name="background_hint_color">@color/gray</item>
        <item name="ripple">@color/ripple_light</item>
        <item name="update_text_color">@color/white</item>
        <item name="background_playlist_menu_color">@color/light_grey</item>
        <item name="expression_text_color">@color/color_text_main_menu</item>
        <item name="general_text_color">@color/black</item>
        <item name="bottom_sheet_placeholder_color">@color/color_text_main_menu</item>
    </style>

    <style name="Theme.PlaylistMakerMainMenu" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_background_color</item>
        <item name="colorPrimaryVariant">?attr/colorOnPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_text_main_menu</item>
        <item name="colorSecondaryVariant">@color/color_text_main_menu</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="colorOnSecondary">@color/color_text_main_menu</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_background_color</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_background_color</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_text_main_menu</item>
        <item name="colorSecondaryVariant">@color/color_text_main_menu</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="colorOnSecondary">@color/color_text_main_menu</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_background_color</item>
        <item name="editTextColor">@color/edit_text_color</item>
        <!-- Customize your theme here. -->
        <item name="imageButtonStyle">@color/image_color</item>
    </style>
</resources>