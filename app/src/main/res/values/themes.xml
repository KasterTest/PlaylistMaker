<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_background_color</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_text_main_menu</item>
        <item name="colorSecondaryVariant">@color/color_text_main_menu</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="colorOnSecondary">@color/color_text_main_menu</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="editTextColor">@color/edit_text_color</item>
        <!-- Customize your theme here. -->
        <item name="imageButtonStyle">@color/image_color</item>
    </style>

    <style name="Theme.PlaylistMakerMainMenu" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_background_color</item>
        <item name="colorPrimaryVariant">?attr/colorOnPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_text_main_menu</item>
        <item name="colorSecondaryVariant">@color/color_text_main_menu</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="colorOnSecondary">@color/color_text_main_menu</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_background_color</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_background_color</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_text_main_menu</item>
        <item name="colorSecondaryVariant">@color/color_text_main_menu</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="colorOnSecondary">@color/color_text_main_menu</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_background_color</item>
        <item name="editTextColor">@color/edit_text_color</item>
        <!-- Customize your theme here. -->
        <item name="imageButtonStyle">@color/image_color</item>
    </style>
</resources>