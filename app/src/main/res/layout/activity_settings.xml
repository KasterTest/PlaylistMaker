<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settings_menu_background"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="28dp"

            app:srcCompat="@drawable/arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"

            android:text="@string/settings"
            android:textColor="@color/color_text_settings_menu"
            android:fontFamily="@font/yandex_sans_text_medium"
            android:textSize="22sp" />

    </LinearLayout>

    <Switch
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="@dimen/button_settings_size"
        android:fontFamily="@font/yandex_sans_display_regular"
        android:letterSpacing="-0.01"
        android:textColor="@color/color_text_main_menu"
        android:thumbTint="@color/white"
        android:trackTint="@color/black"
        android:text="@string/switch_dark_theme_text" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/button_background_main"
        android:drawableEnd="@drawable/share"
        android:fontFamily="@font/yandex_sans_display_regular"
        android:gravity="center|start"
        android:letterSpacing="-0.01"
        android:text="@string/button_settings_share"
        android:textAllCaps="false"
        android:paddingStart="0dp"
        android:textColor="@color/color_text_main_menu"
        android:stateListAnimator="@null"
        android:textSize="@dimen/button_settings_size" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/button_background_main"
        android:drawableEnd="@drawable/support"
        android:fontFamily="@font/yandex_sans_display_regular"
        android:gravity="center|start"
        android:text="@string/button_settings_support"
        android:textAllCaps="false"
        android:paddingStart="0dp"
        android:textColor="@color/color_text_main_menu"
        android:letterSpacing="-0.01"
        android:stateListAnimator="@null"
        android:textSize="@dimen/button_settings_size" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/button_background_main"
        android:drawableEnd="@drawable/arrow_forward"
        android:fontFamily="@font/yandex_sans_display_regular"
        android:gravity="center|start"
        android:text="@string/button_settings_terms_of_use"
        android:textAllCaps="false"
        android:paddingStart="0dp"
        android:textColor="@color/color_text_main_menu"
        android:letterSpacing="-0.01"
        android:layout_marginBottom="400dp"
        android:stateListAnimator="@null"
        android:textSize="@dimen/button_settings_size" />


</LinearLayout>